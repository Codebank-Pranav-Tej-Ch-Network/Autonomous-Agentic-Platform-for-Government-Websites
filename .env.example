# Server Configuration
NODE_ENV=development
PORT=5000
CLIENT_URL=http://localhost:3000

# MongoDB Configuration
# Get free MongoDB Atlas connection string from https://www.mongodb.com/cloud/atlas
MONGODB_URI=YOUR_MONGODB_URI_HERE

# JWT Secret for Authentication
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=YOUR_SECRET_HERE
JWT_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d

# Google Gemini API Configuration
# Get free API key from https://makersuite.google.com/app/apikey
GEMINI_API_KEY=YOUR_GEMINI_API_KEY_HERE

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW=3600000  # 1 hour in milliseconds
RATE_LIMIT_MAX_REQUESTS=100

# Mock Portals URLs (if running separately)
MOCK_IT_PORTAL_URL=http://localhost:4001
MOCK_DIGILOCKER_URL=http://localhost:4002
MOCK_EPFO_URL=http://localhost:4003

# Redis Configuration (for Bull queue - optional, uses in-memory if not provided)
# Get free Redis from https://redis.com/try-free/
REDIS_URL=redis://localhost:6379

# Encryption Key for Sensitive Data
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=YOUR_ENCRYPTION_KEY_HERE

# Session Configuration (same way to generate as above)
SESSION_SECRET=YOUR_SESSION_SECRET_HERE

# Playwright Configuration
HEADLESS=true  # Set to false for debugging
SLOW_MO=0  # Milliseconds to slow down Playwright operations (for debugging)

# Logging
LOG_LEVEL=info  # Options: error, warn, info, debug

# Security
CORS_ORIGIN=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5000
